<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:id="@+id/crear_cargo">

    <EditText
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:id="@+id/Producto"
        android:layout_marginTop="132dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/Tel"
        android:layout_below="@+id/Producto"
        android:layout_alignRight="@+id/Producto"
        android:layout_alignEnd="@+id/Producto"
         />

    <EditText
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/Sem"
        android:layout_below="@+id/Tel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="240dp"
        android:layout_height="60dp"
        android:inputType="numberDecimal"
        android:ems="10"
        android:id="@+id/Total"
        android:layout_below="@+id/Sem"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:linksClickable="false"
         />

    <CheckBox
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:text="Pago seguro"
        android:id="@+id/checkSafe"
        android:layout_below="@+id/Total"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enviar"
        android:id="@+id/enviarNext"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Producto"
        android:id="@+id/textProducto"
        android:layout_above="@+id/Tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:singleLine="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Tel"
        android:id="@+id/textTel"
        android:singleLine="true"
        android:layout_above="@+id/Sem"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Semanas"
        android:id="@+id/textSem"
        android:singleLine="true"
        android:layout_below="@+id/Tel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Monto Total"
        android:id="@+id/textTotal"
        android:singleLine="true"
        android:layout_above="@+id/checkSafe"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>